        /*card*/
         .card {
            position: relative;
            width: 700px;
            height: 350px;
            background: #ccc;
            border-radius: 20px;
            display: flex;
            align-items: center;
            transition: 0.5s;
        }

            .card .circle {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                overflow: hidden
            }

            .card .circle::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: #d83133;
                clip-path: circle(120px at center);
                transition: 0.5s;
            }

            .card:hover .circle:before {
                background: #0065c3;
                clip-path: circle(400px at center);
            }

            .card img {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                height: 300px;
                pointer-events: none;
                transition: 0.5s;
            }

            .card:hover img {
                left: 100%;
                height: 500px;
            }

            .card .content {
                position: relative;
                width: 50%;
                left: 20%;
                padding: 20px 20px 20px 40px;
                transition: 0.5s;
                opacity: 0;
                visibility: hidden
            }

            .card:hover .content {
                left: 0;
                opacity: 1;
                visibility: visible;
            }

            .card .content h2 {
                font-size: 2em;
                color: #fff;
                line-height: 1em;
            }

            .card .content p {
