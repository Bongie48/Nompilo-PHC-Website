@model Nompilo_PHC_Website.Models.Instrument
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LabLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
<h1 class="bg bg-danger text-center">Delete</h1>

<h3>Are you sure you want to delete this instrument?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tests.testfor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>

    </dl>

    <form asp-action="Delete">
        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <input type="hidden" asp-for="instrumentId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>

    </form>
</div>
