@{
    ViewData["Title"] = "DisplayP";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<!-- First Row -->
<div class="row" style="flex: 1; display: flex; background-color: #dcdcdc;">

    <div class="left-div" style="flex: 2; display: flex; flex-direction: column; justify-content: center; align-items: center; background-color: #f0f0f0;">
        <!-- First Row of Cards -->
        <div class="row" style="margin: 10px;">
            <div class="col-md-6">
                <div class="card text-center text-dark">
                    <div class="card-body" style="background-color: #fff;">
                        <i class="fas fa-heartbeat fa-5x"></i>
                        <h5 class="card-title">Chronic Conditions</h5>
                        <a href="#" class="btn btn-primary">View Chronic Conditions</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-center text-dark">
                    <div class="card-body" style="background-color: #fff;">
                        <i class="fas fa-file-contract fa-5x"></i>
                        <h5 class="card-title">Care Contract</h5>
                        <a href="#" class="btn btn-primary">Create Care Contract</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Second Row of Cards -->
        <div class="row" style="margin: 10px;">
            <div class="col-md-6">
                <div class="card text-center text-dark">
                    <div class="card-body" style="background-color: #fff;">
                        <i class="fas fa-calendar-check fa-5x"></i>
                        <h5 class="card-title">Upcoming Visits</h5>
                        <a href="#" class="btn btn-primary">View All Upcoming Visits</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-center text-dark">
                    <div class="card-body" style="background-color: #fff;">
                        <i class="fas fa-file-alt fa-5x"></i>
                        <h5 class="card-title">View Contracts</h5>
                        <a href="#" class="btn btn-primary">View All Care Contracts</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="right-div" style="flex: 1; display: flex; flex-direction: column; justify-content: center; align-items: center; background-color: #f0f0f0;">
        <div class="square-div">
            <!-- Nurse Information -->
            <div class="text-center">
                <h6>My Nurse</h6>
                <h5>Name of Nurse</h5>
            </div>

            <!-- Nurse Image -->
            <div class="text-center">
                <img src="nurse-image.jpg" alt="Nurse" width="100" height="100">
            </div>

            <!-- Contact Information -->
            <div class="text-center mt-3">
                <a href="https://wa.me/1234567890" target="_blank">
                    <i class="fab fa-whatsapp fa-2x"></i>
                    <p>081 892 5277</p>
                </a>
            </div>

            <div class="text-center mt-3">
                <a href="mailto:nurse@example.com">
                    <i class="far fa-envelope fa-2x"></i>
                    <p>nurse@example.com</p>
                </a>
            </div>
        </div>
    </div>
</div>

