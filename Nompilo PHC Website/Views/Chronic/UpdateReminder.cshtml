                <br />
                <p id="h1chronic">Medictation collection/delivery reminder</p>
            </div>
            <br />
            <br />
            <br />
            <br />
            <form class="card" id="hold" asp-controller="Chronic" asp-action="Updaterem">
                <input asp-for="ID" hidden />
                <input asp-for="email" type="email" value="@User.Identity?.Name" hidden /><br />
                <label>Get the reminder before hom many days:</label>
                <select asp-for="Days" type="" aria-required="true" id="inputes">
                    <option disabled selected>---Please select a days----</option>
                    <option>1 Day</option>
                    <option>2 Days</option>
                    <option>3 Days</option>
                    <option>4 Days</option>
                    <option>5 Days</option>
                    <option>6 Days</option>
                    <option>7 Days</option>
                </select><br />
                <span asp-validation-for="Days" class="text-danger"></span>
                <label>Time to receive:</label>
                <input type="time" asp-for="Time" id="inputes">
                <span asp-validation-for="Time" class="text-danger"></span>
                <button class="w-100 btn btn-lg btn-primary" type="submit" id="showPopupButton">Update settings</button>
                <div id="note">
                    <p>
                        <img src="~/css/bellicon.png" width="24" height="24" />Please note that the reminder will be sent to the your email that you used
                        when registering
                    </p>
                </div>
            </form>
        </section>
