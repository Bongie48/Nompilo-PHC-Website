@model Checkup;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/DoctorLayout.cshtml";
}

<body id="home">
    <h1 id="bookh1">View CheckUps</h1>
    <p>
        <a asp-action="Checkup">Back to Checkup List</a>
    </p>

    <h1>Create Checkup</h1>

    <form asp-action="Create">
        

        
        <div class="form-group">
            <label asp-for="Notes"></label>
            <input asp-for="Notes" class="form-control" />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Weight"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BloodPressure"></label>
            <input asp-for="BloodPressure" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PrenatalMonth"></label>
            <select asp-for="PrenatalMonth" class="form-control">
                <option value="1">1st Month</option>
                <option value="2">2nd Month</option>
                <option value="3">3rd Month</option>
                <option value="4">4th Month</option>
                <option value="5">5th Month</option>
                <option value="6">6th Month</option>
                <option value="7">7th Month</option>
                <option value="8">8th Month</option>
                <option value="9">9th Month</option>
            </select>
            <span asp-validation-for="PrenatalMonth" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Temperature"></label>
            <input asp-for="Temperature" class="form-control" />
            <span asp-validation-for="Temperature" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="BookingId" value="@ViewBag.BookingId" />
        <input type="hidden" asp-for="PatientId" value="@ViewBag.PatientId" />

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>

    </form>
    <br />
    <a asp-controller="Booking" asp-action="ViewBookings"><button id="button1" class="btn-danger">Back</button></a>

</body>


