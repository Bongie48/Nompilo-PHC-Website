@model IEnumerable<Nompilo_PHC_Website.Models.TestResult>
@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/_LabLayout.cshtml";
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">

<h2 class="bg bg-info text-center"><i class="fa fa-file-text" aria-hidden="true" style="font-size:48px;color:forestgreen"></i>Test Results Report</h2>
@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        You currently do not have any test records
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Lab Scientist
                </th>
                <th>
                    Patient
                </th>
                <th>
                    Test For
                </th>
                <th>
                    Test Method
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Result)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tests.PatientName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tests.testfor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TestMethods.MethodName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Result)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    

                </tr>
            }



        </tbody>



    </table>
}
<a asp-controller="Results" asp-action="GenerateReport" class="btn btn-primary">Print Report</a>